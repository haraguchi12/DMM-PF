<div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>店舗詳細設定</h2>
        <%= form_with model:@store, local:true do |f| %>


       <div class="form-group">
         <label for="inputName">店舗名</label>
         <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前", class: "form-control" %>
       </div>

       <div class="form-group">
          <label for="inputImage">店舗画像</label>
          <%= f.attachment_field :image, placeholder: "店舗画像", class: "form-control-file" %>
       </div>

       <div class="form-group">
          <label for="inputIntroduction">店舗紹介</label>
          <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder: "店舗紹介文" ,class: "form-control" %>
       </div>

       <div class="form-group">
          <%= f.submit "更新", class:"btn btn-secondary" %>
        </div>
     <% end %>
     </div>
  </div>
</div>
