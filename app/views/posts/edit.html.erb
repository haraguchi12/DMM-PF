<div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>投稿編集</h3>
        <%= form_with model: @post, local:true do |f| %>

          <div class="form-group">
              <label for="inputImage">投稿画像</label>
              <%= f.attachment_field :image, placeholder: "ファイルを選択", class: "form-control-file" %>
          </div>

          <div class="form-group">
              <label for="inputCaptuon">投稿内容</label>
              <%= f.text_area :caption,  class: "post_caption", class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.submit "更新", class:"btn btn-secondary" %>
          </div>
        <% end %>
     </div>

   </div>

</div>