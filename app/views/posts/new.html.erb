<div class="container">
   <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h3>新規投稿</h3>
  <%= form_with model: @post, url: new_post_path, method: :post, local: true do |f| %>

          <div class="form-group">
              <label for="inputImage">投稿画像</label>
              <%= f.attachment_field :image, placeholder: "ファイルを選択",class: "form-control-file" %>
          </div>

          <div class="form-group">
              <label for="inputCaptuon">投稿内容</label>
              <%= f.text_area :caption,  class: "post_caption", placeholder: "投稿内容" ,class: "form-control" %>
          </div>


          <div class="form-group">
            <%= f.submit "新規投稿", class:"btn btn-secondary" %>
          </div>
     <% end %>
     </div>

   </div>
</div>